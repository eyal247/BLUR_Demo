<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_centerVertical="true"
    android:layout_marginTop="1dp"
    android:paddingRight="1dp"
    android:paddingEnd="1dp"
    android:paddingLeft="1dp"
    android:paddingStart="1dp">

    <com.joanzapata.iconify.widget.IconTextView
        android:id="@+id/icon_awesome_font_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_circle_background"
        android:textSize="18sp"
        android:padding="9dp"
        android:minWidth="30dp"
        android:minHeight="30dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="6dp"
        android:text="@string/icon_feed"/>

    <TextView
        android:id="@+id/tab_icon_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="35"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/icon_awesome_font_string"
        android:textAlignment="center"
        android:textColor="@color/feed_color"
        android:textSize="10sp"
        android:minHeight="14dp"
        android:minWidth="18dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingRight="4dp"
        android:paddingLeft="4dp"
        android:layout_marginRight="7dp"
        android:layout_marginEnd="7dp"
        android:textStyle="bold"
        android:background="@drawable/badge_circle"/>


</RelativeLayout>